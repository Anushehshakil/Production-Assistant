@model project.Models.QCmasterdata

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css"rel="stylesheet">


<title>Item Master Date</title>
</head>
<body>
 
  <!--item code form-->
  <div class="container">
    <div class="card p-3">
        <div class="row g-2">
            <div class="col-12 mb-4">
                <h4><b>Item Parameter Master Data</b></h4>
               
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="Item Code">
                    <label>Item Code</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="Code">
                    <label>Code</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
              <div class="form-floating">
                  <input type="text" class="form-control" placeholder="Description">
                  <label>Description</label>
              </div>
          </div>
          <div class="col-lg-6 col-md-12">
              <div class="form-floating">
                  <input type="text" class="form-control" placeholder="name">
                  <label>Name</label>
              </div>
              
          </div>
          <div class="col-12 mb-1">
            <h4><b>General</b></h4>
        </div>
           
        <div class="col-lg-4 col-md-12">
                <div class="form-floating">
                    <select class="form-select">
        <option selected="" hidden="">Open this select menu</option>
        <option value="1">Receipt From Production</option>
        <option value="2">Issue For Production</option>
        <option value="3">inventory transfer </option>
        <option value="4">inventory transfer request</option>
        </select>
                    <label>Stage</label>
                </div>
            </div>
            <br>
            <div class="col-lg-6 col-md-12">
              <div class="form-floating">
                  <input type="text" class="form-control" placeholder="uom">
                  <label>UOM</label>
              </div>
          </div>
          <div class="col-lg-6 col-md-12">
            <div class="form-floating">
                <input type="text" class="form-control" placeholder="parameter">
                <label>Parameter</label>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
          <div class="form-floating">
              <input type="text" class="form-control" placeholder="parametername">
              <label>Parameter Name</label>
          </div>
      </div>

      <div class="col-lg-6 col-md-12">
        <div class="form-floating">
            <input type="text" class="form-control" placeholder="min.value">
            <label>Minimum Value</label>
        </div>
    </div>

    <div class="col-lg-6 col-md-12">
      <div class="form-floating">
          <input type="text" class="form-control" placeholder="max.value">
          <label>Maximum Value</label>
      </div>
  </div>

  <div class="col-lg-6 col-md-12">
    <div class="form-floating">
        <input type="text" class="form-control" placeholder="std.value">
        <label>Std.Value</label>
    </div>
</div>
<!--Button code-->
            <div class="col-12 mt-4">
                <button class="btn btn-secondary text-uppercase" type="button">Ok</button>
                <button class="btn btn-primary text-uppercase" type="button">Cancel</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>