@model IEnumerable<project.Models.Qualitycheck>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  

    <title>Quality Check</title>
</head>
<body>

    <!--Quality check form-->

    <div class="container">
        <div class="card p-3">
            <div class="row g-3">
                <div class="col-12 mb-4">
                    <h4><b>Quality Check</b></h4>

                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Item Code">
                        <label>Item Code</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Item Name">
                        <label>Item Name</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Request Number">
                        <label>Request Number</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Base docnum">
                        <label>Base Document Number</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Stage">
                        <label>Stage</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="inspector code">
                        <label>Inspector Code</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Inspector Date">
                        <label>Inspector Date</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Inspector name">
                        <label>Inspector Name</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Quality">
                        <label>Quality</label>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="accepted ">
                        <label>Accepted Quality</label>
                    </div>
                </div>


                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="reject">
                        <label>Rejected Quality</label>
                    </div>
                </div>

                <div class="container mt-6">

                    <div class="row">

                        <div class="col-md-12 mx-auto">

                            <table class="table bg-white rounded border">


                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Parameter Code</th>
                                        <th scope="col">Prarmeter Name</th>
                                        <th scope="col">UOM</th>
                                        <th scope="col">Minimum Value</th>
                                        <th scope="col">Maxmimum Value</th>
                                    </tr>
                                </thead>

                                <div class="col-12 mt-2">
                                    <button class="btn btn-secondary text-uppercase" type="button">Ok</button>
                                    <button class="btn btn-primary text-uppercase" type="button">Cancel</button>
                                </div>

</body>
</html>