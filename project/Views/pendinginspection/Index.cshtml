@model project.Models.Pendinginspection

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    

    <title>Pending Inspection</title>
</head>
<body>

    <!--pending inspection-->
    <div class="container">
        <div class="card p-3">
            <div class="row g-3">
                <div class="col-12 mb-4">
                    <h4><b>Pending Inspection</b></h4>

                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="cardCode">
                        <label>Card Code</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Cardname">
                        <label>Card Name</label>
                    </div>
                </div>

                <div class="col-lg-4 col-md-12">
                    <div class="form-floating">
                        <select class="form-select">
                            <option selected="" hidden="">Open this select menu</option>
                            <option value="1">Receipt From Production</option>
                            <option value="2">Issue For Production</option>
                            <option value="3">inventory transfer request</option>
                            <option value="4">inventory transfer</option>
                        </select>
                        <label>Document Type</label>
                    </div>
                </div>

                <div class="col-lg-4 col-md-12">
                    <div class="form-floating">
                        <select class="form-select">
                            <option selected="" hidden="">Open this select menu</option>
                            <option value="1">Pending</option>
                            <option value="2">Under Inspection</option>
                            <option value="3">Cancel</option>
                        </select>
                        <label>Document Status</label>
                    </div>
                </div>

            </div>
            <div class="container mt-6">

                <div class="row">

                    <div class="col-md-12 mx-auto">

                        <table class="table bg-white rounded border">

                           
                            <div class="col-10 mt-2">
                                <button class="btn btn-secondary text-uppercase" type="button">Ok</button>
                                <button class="btn btn-primary text-uppercase" type="button">Cancel</button>
                            </div>
                            
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Request</th>
                                    <th scope="col">Base</th>
                                    <th scope="col">Stage</th>
                                    <th scope="col">Item code</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">UOM</th>
                                    <th scope="col">Quality</th>
                                    <th scope="col">Warehouse Data</th>
                                    <th scope="col">Warehouse Name</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                       
                          
</body>
</html>
